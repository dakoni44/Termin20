<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Glumac_info">


    <ImageView
        android:id="@+id/ivGlumac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:color/holo_red_dark" />
    <TextView
        android:id="@+id/tvIme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivGlumac"/>
    <TextView
        android:id="@+id/tvPrezime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvIme"
        android:layout_marginRight="5dp"/>
    <TextView
        android:id="@+id/tvDatumR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvIme"/>
    <TextView
        android:id="@+id/tvDatumS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvDatumR"
        android:layout_marginRight="5dp"/>
    <TextView
        android:id="@+id/tvBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDatumS"/>

</RelativeLayout>